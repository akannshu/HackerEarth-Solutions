#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;
    string s1,s2;
    cin>>s1>>s2;

    int count=0;

    for(int i=0;i<n;i++)
    {
        if(s1[i]>s2[i])
            count=count+(26-s1[i]+s2[i])/13+(26-s1[i]+s2[i])%13;
            
        else if(s1[i]<s2[i])
            count=count+(s2[i]-s1[i])/13+(s2[i]-s1[i])%13;
    }

    cout<<count<<endl;

    return 0;
}
